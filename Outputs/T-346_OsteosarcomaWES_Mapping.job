#!/bin/bash
#SBATCH -J BWAT-346
#SBATCH -p sgpu
#SBATCH --qos Normal
#SBATCH -t 24:00:00
#SBATCH -N 1
#SBATCH --output=T-346-S3-S8.out

module load jdk

#2019-05-15
#OsteosarcomaWES

#S3_Running BWA --- T-346

bwa mem -M -t 12 \
-R '@RG\tID:@A00405\tSM:T-346\tPL:illumina\tLB:lib4\tPU:T-346.GAATCTGA.1' \
/projects/sdas@colostate.edu/CanFamDatabases/DogGenome/CanFam3 \
../Trimfiles/T346_R1_paired.fastq.gz \
../Trimfiles/T346_R2_paired.fastq.gz > ../sam/T-346_BWA.sam


#S4_Sort SAM for marking duplicates --- T-346

java -jar ~/picard.jar SortSam \
      TMP_DIR=../bam/tempT-346 \
      I=../sam/T-346_BWA.sam \
      O=../sam/T-346_BWA_sorted.sam \
      SORT_ORDER=coordinate

#S4a_Removing the unsorted sam file

rm ../sam/T-346_BWA.sam

#S5_Mark Duplicates --- T-346 

java -jar ~/picard.jar MarkDuplicates \
 	TMP_DIR=../bam/tempT-346 \
 	I=../sam/T-346_BWA_sorted.sam \
 	O=../bam/T-346_dedup.bam \
 	M=../bam/T-346_marked_dup_metrics.txt

#S6_Index bam file --- T-346

samtools index ../bam/T-346_dedup.bam

#S7_Recalibrate Base --- T-346

gatk BaseRecalibrator \
   -R /projects/sdas\@colostate.edu/CanFamDatabases/DogGenome/Canis_familiaris.CanFam3.1.dna.fa  \
   -I ../bam/T-346_dedup.bam \
   --known-sites /projects/sdas\@colostate.edu/CanFamDatabases/Canis_familiaris_V89.vcf \
   -O ../bam/T-346_recal_data.grp

#S8_Print bam file with recalibrated bases --- T-346

gatk ApplyBQSR \
   -R /projects/sdas\@colostate.edu/CanFamDatabases/DogGenome/Canis_familiaris.CanFam3.1.dna.fa \
   -I ../bam/T-346_dedup.bam \
   --bqsr-recal-file  ../bam/T-346_recal_data.grp \
   -O ../BAM/T-346_recal_reads.bam

